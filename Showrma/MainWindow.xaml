<Window x:Class="Showrma.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Showrma"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
    <Grid>
        <Grid >
            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition Height="190*"/>
            </Grid.RowDefinitions>
            <Grid.Background >
                <ImageBrush ImageSource="/Resources/фон.png" Opacity="0.7"></ImageBrush>
            </Grid.Background>
            <Grid Background="LightGray" >

                <Border HorizontalAlignment="Center" Width="450" Height="70"  CornerRadius="17" BorderBrush="White" BorderThickness="4" Background="DimGray">
                </Border>
                <Button Margin="0 0 50 0" HorizontalAlignment="Right" Height="30" Width="80" x:Name="ExBtn" Content="Выход" Click="ExBtn_OnClick"></Button>
            </Grid>

            <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" Grid.Row="1"></Frame>
        </Grid>
    </Grid>
</Window>
